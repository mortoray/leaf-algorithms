typedef ipoint : [
	x : integer,
	y : integer,
]

class game {
	var size : ipoint
	var head_pos : ipoint
	
	defn default = -> construct {
		size = [ 30, 20 ]
		head_pos = [ 10, 7 ]
	}
	
	defn move = ( xoff : integer, yoff  : integer ) -> {
		head_pos.x = mod(head_pos.x + xoff, size.x)
		head_pos.y = mod(head_pos.y + yoff, size.y)
	}
	
}
